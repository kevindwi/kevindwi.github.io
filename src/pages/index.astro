---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Link from "../components/Link.astro";

var link = {
  github: "https://github.com/kevindwi",
  email: "mailto:kevindwi356@gmail.com",
  linkedin: "https://www.linkedin.com/in/kevindwi",
  cv: "/CV_Kevin_Dwi_Nayotama.pdf",
  portfolio: "/Portfolio_Kevin_1.pdf",
};

var pojects = [
  {
    title: "Run File Transfer",
    description:
      "File transfer app using React and WebRTC that enables direct file transfer between two devices using local Wi-Fi network. The system uses a Socket.IO-based signaling server to create and join rooms, with QR Code support for quick device pairing.",
    imageURL: "/run-file-transfer.png",
    redirect: "https://runtransfer.vercel.app",
  },
  {
    title: "Green Energy Landing Page",
    description: "Fake project",
    imageURL: "/green-energy.png",
    redirect: "https://green-energy-blond.vercel.app/",
  },
  {
    title: "Timeless Farm Landing Page",
    description: "Fake project",
    imageURL: "/timeless-farm.png",
    redirect: "https://timeless-farm.vercel.app",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <div class="flex justify-center max-w-screen-sm mx-auto md:w-auto pt-28">
      <main class="min-h-[60vh] w-full px-6 md:px-0 md:w-auto">
        <section class="mb-12">
          <div>
            <h1 class="text-black text-2xl font-medium">Hi, I'm Kevin</h1>
            <p>
              Iâ€™m an undergraduate in Electrical Engineering at Surabaya State
              University, passionate about Embedded Systems, the Internet of
              Things, and Web Development.
              <br />
              <br />
              Currently, I am interested in how to combine embedded systems and AI
              to solve real-world problems.
            </p>
          </div>
          <div class="flex flex-wrap gap-3 mt-5">
            <a
              class="flex items-center gap-1 cursor-pointer select-none bg-white text-black font-medium text-sm py-[6px] px-3 rounded-full border border-gray-300 transition-colors duration-200 ease-out hover:text-blue-600 hover:underline"
              target="_blank"
              href={link["github"]}
            >
              Github
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                class="size-[14px] stroke-gray-1200"
                ><path
                  d="M18 15V6M18 6H9M18 6L6.25 17.75"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path></svg
              >
            </a>
            <a
              class="flex items-center gap-1 cursor-pointer select-none bg-white text-black font-medium text-sm py-[6px] px-3 rounded-full border border-gray-300 transition-colors duration-200 ease-out hover:text-blue-600 hover:underline"
              target="_blank"
              href={link["email"]}
            >
              Email
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                class="size-[14px] stroke-gray-1200"
                ><path
                  d="M18 15V6M18 6H9M18 6L6.25 17.75"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path></svg
              >
            </a>
            <a
              class="flex items-center gap-1 cursor-pointer select-none bg-white text-black font-medium text-sm py-[6px] px-3 rounded-full border border-gray-300 transition-colors duration-200 ease-out hover:text-blue-600 hover:underline"
              target="_blank"
              href={link["linkedin"]}
            >
              LinkedIn
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                class="size-[14px] stroke-gray-1200"
                ><path
                  d="M18 15V6M18 6H9M18 6L6.25 17.75"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path></svg
              >
            </a>
            <a
              class="flex items-center gap-1 cursor-pointer select-none bg-white text-black font-medium text-sm py-[6px] px-3 rounded-full border border-gray-300 transition-colors duration-200 ease-out hover:text-blue-600 hover:underline"
              target="_blank"
              href={link["cv"]}
            >
              CV
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                class="size-[14px] stroke-gray-1200"
                ><path
                  d="M18 15V6M18 6H9M18 6L6.25 17.75"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path></svg
              >
            </a>
            <a
              class="flex items-center gap-1 cursor-pointer select-none bg-white text-black font-medium text-sm py-[6px] px-3 rounded-full border border-gray-300 transition-colors duration-200 ease-out hover:text-blue-600 hover:underline"
              target="_blank"
              href={link["portfolio"]}
            >
              Portfolio
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                class="size-[14px] stroke-gray-1200"
                ><path
                  d="M18 15V6M18 6H9M18 6L6.25 17.75"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path></svg
              >
            </a>
          </div>
        </section>

        <section class="mb-12">
          <h1 class="text-xl font-medium mb-4">Projects</h1>

          <div class="grid grid-cols-1 gap-6">
            {
              pojects.map((project) => (
                <div class="flex flex-col gap-y-3">
                  <img
                    src={project.imageURL}
                    class="w-full max-h-[400px] object-cover rounded-2xl border border-gray-200"
                  />
                  <div class="flex flex-col gap-y-2">
                    <a
                      target="_blank"
                      href={project.redirect}
                      class="flex justify-between items-center hover:text-black/60"
                    >
                      <h1 class="text-xl font-medium">{project.title}</h1>
                      <div>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke-width="2"
                          stroke="currentColor"
                          class="size-5"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"
                          />
                        </svg>
                      </div>
                    </a>
                    <span class="text-md">{project.description}</span>
                  </div>
                </div>
              ))
            }
          </div>
        </section>
      </main>
    </div>

    <Footer />
  </body>
</html>
